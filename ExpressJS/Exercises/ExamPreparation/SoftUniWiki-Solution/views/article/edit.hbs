<section>
    <h2>Edit article
        <div class="controls">
            {{#if isAdmin}}
                <a href="/article/lock/{{_id}}">Lock article</a>
                <a href="/article/unlock/{{_id}}">Unlock article</a>
            {{/if}}
        </div>
    </h2>
    <div class="spacer">
        <form action="/article/edit/{{_id}}" method="POST">
            <label>Article title</label>
            <h3>{{title}}</h3>
            <label for="content">Content</label>
            <textarea name="content" id="content">
                {{content}}
            </textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>